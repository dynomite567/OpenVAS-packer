        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=vagrantup.com <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 22768,
      "guest_os_type": "debian8-64",
      "headless": false,
      "output_directory": "builds/{{build_type}}/openvas9-amd64",
      "http_directory": "http",
      "iso_checksum_type": "sha512",
      "iso_checksum_url": "http://cdimage.debian.org/cdimage/archive/8.11.0/amd64/iso-cd/SHA512SUMS",
      "iso_url": "http://cdimage.debian.org/cdimage/archive/8.11.0/amd64/iso-cd/debian-8.11.0-amd64-netinst.iso",

      "ssh_username": "cyberpatrioths18",
      "ssh_password": "defcon27",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'cyberpatrioths18'| sudo -S /sbin/shutdown -hP now",
      "vm_name": "openvas9-amd64",
      "vmx_data": {
        "memsize": "2048",
        "numvcpus": "2"
      }
    },
    {
    "name": "qemu",
    "type": "qemu",
    "accelerator":"kvm",
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed_jessie_qemu.cfg <wait>",
        "debian-installer=en_US <wait>",
        "auto <wait>",
        "locale=en_US <wait>",
        "kbd-chooser/method=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
