  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'cyberpatrioths18' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/update.sh",
        "scripts/sshd.sh",
        "scripts/sudoers.sh",
        "scripts/openVAS.sh"
      ]
    },
    {
      "type": "shell",
      "execute_command": "echo 'cyberpatrioths18' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/vbaddguest.sh"
      ],
      "only": ["virturalbox"]
